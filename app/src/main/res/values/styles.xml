<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Theme Customizations. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/cocon_next_arabic_light</item>
        <item name="fontFamily">@font/cocon_next_arabic_light</item>
    </style>

    <!--    Main Button style-->
    <style name="main_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <!--    Orange Button style-->
    <style name="orange_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <!--    Stroke Button style-->
    <style name="stroke_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/strok_btn</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <!--    Orange Stroke Button style-->
    <style name="orange_stroke_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/orange_strok_btn</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <!--    Red Stroke Button style-->
    <style name="red_stroke_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/red_strock_btn</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <!--    Green Stroke Button style-->
    <style name="green_stroke_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/green_strok_btn</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    <!--    White Button style-->
    <style name="white_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/white_btn</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="txt_input_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="curvied_gray_input_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/gray_input_bg</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="stroke_input_style" parent="curvied_gray_input_style">
        <item name="android:background">@drawable/strock_input_bg</item>
    </style>

    <style name="dialog_input_style" parent="curvied_gray_input_style">
        <item name="android:background">@drawable/dialog_input_bg</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
    </style>

    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="borderWidth">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxStrokeColor">@null</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="background">@color/white</item>
    </style>
</resources>
