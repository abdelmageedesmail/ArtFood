<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lang"
            type="String" />

        <variable
            name="viewModel"
            type="com.art4musilm.artfoodCustomer.viewModels.StoresViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activites.StoreActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_app_bar"></include>

        <include
            layout="@layout/loading_layout"
            app:viewModel="@{viewModel}" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/header_banner"
                        imageBinding="@{viewModel.observeFamilyDetails().familyDetails.image}"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:src="@drawable/meal_ic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius="@dimen/_10sdp"></com.makeramen.roundedimageview.RoundedImageView>

                    <TextView
                        notNullText='@{lang.equals("ar")?viewModel.observeFamilyDetails().familyDetails.familystatusName:viewModel.observeFamilyDetails().familyDetails.familystatusNameen}'
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:background='@{viewModel.observeFamilyDetails().familyDetails.familystatus.equals("4")?@drawable/busy_bg:@drawable/status_bg}'
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:textColor="@color/white"></TextView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logo_img"
                        imageBinding="@{viewModel.observeFamilyDetails().familyDetails.commercialrecord}"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/res_img"
                        android:transitionName="storeLogo"
                        android:translationZ="10dp"></de.hdodenhof.circleimageview.CircleImageView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header_banner"
                        android:backgroundTint="@color/uvv_light_gray"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@id/header_banner">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                notNullText="@{viewModel.observeFamilyDetails().familyDetails.name}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="@string/store_name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold"></TextView>

                            <RatingBar
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:rating="@{viewModel.observeFamilyDetails().familyDetails.stars}"
                                android:text="Category"
                                android:textColor="@color/gray_dark"
                                android:textSize="@dimen/_10sdp"></RatingBar>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/uvv_light_gray"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:text="@string/distance"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold"></TextView>
                                <!--                                notNullText='@{viewModel.observeFamilyDetails().familyDetails.distance+" km"}'-->
                                <TextView
                                    android:id="@+id/tvDistance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="@dimen/_9sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:text="@string/delivery_fees"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    android:id="@+id/tvDeliveryPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/_9sdp"></TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/uvv_light_gray"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:text="@string/estimated_time"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold"></TextView>

                                <TextView
                                    notNullText='@{viewModel.observeFamilyDetails().familyDetails.expectedtime}'
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_30_mins"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="@dimen/_9sdp"></TextView>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/categories_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_layout_category"></androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_title_ico"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="@string/products_and_meals"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"></TextView>

                    <EditText
                        android:id="@+id/search_product"
                        style="@style/txt_input_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/strock_input"
                        android:drawableStart="@drawable/ic_search_1"
                        android:hint="@string/search_products"
                        android:textSize="@dimen/_9sdp"></EditText>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/meals_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_layout_meal"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>